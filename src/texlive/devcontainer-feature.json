{
    "name": "TeX Live from official site installer",
    "id": "texlive",
    "version": "1.4.0",
    "description": "Install an up-to-date TeX Live distribution from official site.",
    "options": {
        "repository": {
            "type": "string",
            "default": "https://mirror.ctan.org/systems/texlive/tlnet",
            "description": "Specify the package repository to be used as the source of the installation."
        },
        "version": {
            "type": "string",
            "proposals": [
                "latest",
                "2023",
                "2022",
                "2021",
                "2020",
                "2019",
                "2018",
                "2017",
                "2016"
            ],
            "default": "latest",
            "description": "Select or the TeX Live historic version to install."
        },
        "scheme": {
            "type": "string",
            "proposals": [
                "basic",
                "bookpub",
                "context",
                "custom",
                "full",
                "gust",
                "infraonly",
                "medium",
                "minimal",
                "small"
            ],
            "default": "basic",
            "description": "Select or enter the TeX Live scheme to install. WARNING: _minimal_ scheme **DOES NOT** include LaTeX!"
        },
        "collection-basic": {
            "type": "boolean",
            "default": false,
            "description": "Enable TeX Live collection-basic installation."
        },
